rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if false;
    }

    function isLoggedIn() {
  		return request.auth.uid != null;
  	}

  	match /users/{uid} {
      allow read, write: if isLoggedIn() && uid == request.auth.uid;
    }
  }
}